<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@drawable/health_pro"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#ff052f69"
        android:alpha="0.9"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp"
        android:id="@+id/relativeLayout"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        android:paddingTop="100dp"
        android:paddingBottom="100dp"
        android:layout_weight="2">


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start "
            android:id="@+id/btn_start"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="#ffff3a55" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="which derivation you'll listen ?"
            android:id="@+id/tv_graph"
            android:textSize="15dp"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:hint="       aVR, aVL or aVF "
            android:id="@+id/derivation"
            android:layout_below="@+id/tv_graph"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20px"
            android:layout_below="@+id/derivation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chose graph color"
                android:textColor="#FFFFFF"
                android:paddingTop="20px"
                android:paddingLeft="10px"/>


            <RadioGroup
                android:id="@+id/gender_radio_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <RadioButton
                    android:id="@+id/color_red"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Red"
                    android:textColor="#ffff0526"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/color_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Blue"
                    android:textColor="#ff0b0fff"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/color_black"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Black"
                    android:textColor="#fd000000"
                    android:layout_weight="1" />

            </RadioGroup>

        </LinearLayout>




    </RelativeLayout>



</LinearLayout>